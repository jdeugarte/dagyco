<div class="row">

		<h2>Crear cuenta</h2>
</div>
<div class="row">
<div class="col-md-2"></div>
<div class="col-md-4">


<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	<% if devise_error_messages!.length >2 %>
		<div class="alert fade-in alert-danger">
			<div class="close" data-dismiss="alert">x</div>
		  <%= devise_error_messages! %>
	  	</div>
	<% end %>

  <div>
  <%= f.email_field :email, autofocus: true %></div>

  <div>
    <%= f.password_field :password, label: "Contraseña (8 caractéres minimo)", autocomplete: "off" %></div>

  <div>
    <%= f.password_field :password_confirmation, label: "Confirmación de contraseña", autocomplete: "off" %></div>

  <div><%= f.submit "Crear cuenta" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>
</div>

